import java.util.Scanner;

public class pattern4 {
public static void main(String[] args) {
	Scanner s = new Scanner(System.in);
	System.out.println("Enter the no of rows");
	int n = s.nextInt();
	for(int i=0;i<n;i++)
	{
		for(int j=0;j<n-i;j++)
		{
			System.out.println(" ");
			
		}
		for(int j=1;j<i;i++)
		{
			System.out.print("*"+" ");
		}
		System.out.println();
	}
}

}
